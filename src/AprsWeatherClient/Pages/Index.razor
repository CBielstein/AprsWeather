@page "/"
@using AprsSharp.Parsers.Aprs
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<PageTitle>APRS Weather</PageTitle>

<h1>Current Weather</h1>

@if (reports == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Callsign</th>
                <th>Report Time (UTC)</th>
                <th>Temp. (F)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in reports)
            {
                if (report.InfoField is WeatherInfo wi)
                {
                    <tr>
                        <td>@report.Sender</td>
                        <td>@wi.Timestamp?.DateTime.ToUniversalTime()</td>
                        <td>@wi.Temperature</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

@code {
    private Packet[]? reports;
    private HttpClient client = new HttpClient();
    private string? apiAddress;

    private async Task UpdateReports()
    {
        if (apiAddress == null)
        {
            apiAddress = Configuration["ServerAddress"];
        }

        var response = await client.GetFromJsonAsync<string[]>($"{apiAddress}/WeatherReports");
        reports = response?.Select(p => new Packet(p)).ToArray();
    }

    protected override async Task OnInitializedAsync()
    {
        await UpdateReports();
    }
}
